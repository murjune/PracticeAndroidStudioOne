<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/frg_home">
<!--    startDestination 어디서 시작할 꺼냐-->
    <fragment
        android:id="@+id/frg_home"
        android:name="org.techtown.seminar2.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_friendFragment"
            app:destination="@id/frg_friend" />
    </fragment>
    <fragment
        android:id="@+id/frg_friend"
        android:name="org.techtown.seminar2.fragment.FriendFragment"
        android:label="fragment_friend"
        tools:layout="@layout/fragment_friend" >
        <action
            android:id="@+id/action_friendFragment_to_musicFragment"
            app:destination="@id/frg_music" />
    </fragment>
    <fragment
        android:id="@+id/frg_music"
        android:name="org.techtown.seminar2.fragment.MusicFragment"
        android:label="fragment_music"
        tools:layout="@layout/fragment_music" />
</navigation>